{
  "name": "@zodapp/zod-firebase",
  "version": "0.0.0",
  "private": false,
  "description": "Zod integration for Firebase",
  "author": "zodapp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zodapp/zodapp.git",
    "directory": "packages/zod-firebase"
  },
  "homepage": "https://github.com/zodapp/zodapp#readme",
  "bugs": {
    "url": "https://github.com/zodapp/zodapp/issues"
  },
  "keywords": ["zod", "firebase", "validation"],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "format": "prettier --write .",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint .",
    "lint:silent": "mkdir -p output && pnpm lint > ./output/lint.txt",
    "clean": "rimraf dist .turbo node_modules",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "docs:typedoc": "node ../../tools/gen-typedoc.mjs"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.19.7",
    "eslint": "^9.34.0",
    "rimraf": "^6.1.2",
    "tslib": "^2.8.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@zodapp/caching-utilities": "workspace:*",
    "@zodapp/zod-form": "workspace:*",
    "zod": "^4.3.6"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
