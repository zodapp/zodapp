    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.34.0",
    "rimraf": "^6.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@zodapp/zod-propagating-registry": "workspace:*",
