{
  "name": "@zodapp/zod-extendable",
  "version": "0.0.0",
  "private": false,
  "description": "Extensible Zod schema with metadata propagation support",
  "author": "zodapp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zodapp/zodapp.git",
    "directory": "packages/zod-extendable"
  },
  "homepage": "https://github.com/zodapp/zodapp#readme",
  "bugs": {
    "url": "https://github.com/zodapp/zodapp/issues"
  },
  "keywords": ["zod", "schema", "metadata", "extensible"],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
